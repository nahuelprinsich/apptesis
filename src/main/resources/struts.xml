<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
   <package name="default" namespace="/" extends="struts-default,json-default">

      <action name="CargarProducto" method="cargarProducto"
              class="com.tesis.actions.ProductoAction">
         <result name="success">/index.jsp</result>
      </action>

      <action name="CargarItem" method="cargarItem"
              class="com.tesis.actions.ProductoAction">
         <result name="success">/index.jsp</result>
      </action>

      <action name="CargarAsociaciones" method="cargarAsociaciones"
              class="com.tesis.actions.ProductoAction">
         <result name="success">pages/asociarProductosItems.jsp</result>
      </action>

      <action name="AsociarProductoItems" method="asociarProductoItems"
              class="com.tesis.actions.ProductoAction">
         <result name="success">/index.jsp</result>
      </action>

   </package>
</struts>