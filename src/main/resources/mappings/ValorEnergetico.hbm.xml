<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tesis.models">
    <class name="ValorEnergetico" table="valorenergetico">
        <id name="idValorEnergetico"  column="idValorEnergetico" unsaved-value="0" type="integer">
            <generator class="native" ></generator>
        </id>
        <property name="nombre" column="nombre" />
        <property name="descripcion" column="descripcion" />
        <property name="recomendableDiario" column="recomendableDiario" />
        <property name="valor" column="valor" />
        <property name="tipoPorcion" column="tipoPorcion" />
        <set name="productos" table="producto_valorenergetico" fetch="join" lazy="false"  >
            <key column="ValorEnergetico_idValorEnergetico"/>
            <many-to-many column="Producto_idProducto" class="Producto" />
        </set>

    </class>
</hibernate-mapping>