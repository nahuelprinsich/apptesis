<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tesis.models">
    <class name="Comentario" table="Comentario">
        <id name="idComentario"  column="idComentario" unsaved-value="0" type="long">
            <generator class="native" ></generator>
        </id>
        <property name="descripcion" column="descripcion" type="string" length="50" />
    </class>
</hibernate-mapping>