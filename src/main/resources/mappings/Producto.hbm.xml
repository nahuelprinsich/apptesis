<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.tesis.models">
    <class name="Producto" table="producto">
        <id name="idProducto"  column="idProducto" unsaved-value="0" type="integer">
            <generator class="native" ></generator>
        </id>
        <property name="codigoBarra" column="codigoBarra" />
        <property name="nombreProducto" column="nombreProducto" />
        <property name="rubro" column="rubro" />
        <property name="esAlimento" column="esAlimento" />
        <property name="porcion" column="porcion" />
        <property name="tipoPorcion" column="tipoPorcion" />
        <property name="imagen" column="imagen" />
        <property name="marca" column="marca" />
        <property name="contenidoNeto" column="contenidoNeto" />
        <one-to-one name="envase" class="Envase" />
        <one-to-one name="fabricante" class="Fabricante" />
        <set name="comentarios" table="comentario" fetch="join" lazy="false"  >
            <key column="idComentario"/>
            <one-to-many class="Comentario"/>
        </set>
        <set name="extras" table="extra" fetch="join" lazy="false"  >
            <key column="idExtra"/>
            <one-to-many class="Extra"/>
        </set>
        <set name="ingredientes" table="producto_ingrediente" fetch="join" lazy="false">
            <key column="Producto_idProducto"/>
            <many-to-many column="Ingrediente_idIngrediente" class="Ingrediente"/>
        </set>
        <set name="valoresEnergeticos" table="producto_valorenergetico" fetch="join" lazy="false">
            <key column="Producto_idProducto"/>
            <many-to-many column="ValorEnergetico_idValorEnergetico" class="ValorEnergetico"/>
        </set>
        <!--<set name="valorEnergeticoProductos" table="valorenergetico_producto" fetch="join" lazy="false"  >
            <key column="Producto_idProducto"/>
            <one-to-many class="ValorEnergeticoProducto" />
        </set>-->

    </class>
</hibernate-mapping>